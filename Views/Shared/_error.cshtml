<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.3/jquery.min.js"></script>

<script type="text/javascript">
    $(function () {
        $('.modal').modal('show');
    });
    function hide() {
        $('.modal').modal('hide');
    }
</script>
<div class="modal fade" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h2 class="text-center" style="color:red; font-size:24px"> Failed </h2>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close" onclick="hide()"><span aria-hidden="true">&times;</span></button>
            </div>
            <div class="modal-body">
                <h2 style="color:red; font-size:16px">Detay </h2>

                @foreach (string s in Model)
                {
                    <p style="font-size:12px">@s</p>

                }
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" onclick="hide()" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>